# Event Kit configuration
# Copy to .env and adjust values, then run `export $(grep -v '^#' .env | xargs)` in bash

# Select run mode: custom-chat | m365-agent | sharepoint-agent
RUN_MODE=custom-chat

# Custom chat server
PORT=8010
INCLUDE_CARD=true

# Microsoft Graph credentials (required for m365-agent; required for sharepoint-agent when --publish)
GRAPH_TENANT_ID=
GRAPH_CLIENT_ID=
GRAPH_CLIENT_SECRET=

# SharePoint publish defaults (optional)
INTERESTS=AI;agents
MAX_SESSIONS=3
PUBLISH=false
