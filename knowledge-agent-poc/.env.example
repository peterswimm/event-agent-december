# LLM Configuration
# Choose one: openai, azure-openai, anthropic
LLM_PROVIDER=azure-openai

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_VERSION=2024-02-15-preview

# OpenAI (if using openai provider)
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4

# Anthropic (if using anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_MODEL=claude-opus-4-1-20250805

# Azure Identity (for managed authentication)
AZURE_TENANT_ID=your-tenant-id
AZURE_SUBSCRIPTION_ID=your-subscription-id

# POC Configuration
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
REVIEW_MODE=true

# Extraction Settings
PAPER_EXTRACTION_MODEL=gpt-4
TALK_EXTRACTION_MODEL=gpt-4
REPOSITORY_EXTRACTION_MODEL=gpt-4

# Confidence Thresholds
MIN_CONFIDENCE_SCORE=0.7

# Output Configuration
OUTPUT_FORMAT=json
INCLUDE_HUMAN_SUMMARY=true
